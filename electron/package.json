{
  "name": "mix-it-electron",
  "version": "0.1.0",
  "description": "A song recommendation tool dor DJs",
  "author": "Maurice Ackel",
  "license": "AGPL-3.0",
  "main": "build/electron.js",
  "scripts": {
    "prestart": "npm run build",
    "start": "electron-forge start",
    "build": "npm run build:app && npm run build:electron",
    "build:electron": "webpack",
    "build:app": "REACT_APP_ELECTRON_ENABLED=true npm run build --prefix ../frontend && shx mkdir -p ./build && shx cp -r ../frontend/build/* ./build",
    "prepackage": "npm run build",
    "package": "electron-forge package",
    "premake": "npm run build",
    "make": "electron-forge make",
    "publish": "electron-forge publish",
    "lint": "eslint --ext .ts ."
  },
  "keywords": [],
  "config": {
    "forge": {
      "packagerConfig": {
        "name": "MixIt"
      },
      "makers": [
        {
          "name": "@electron-forge/maker-squirrel",
          "config": {
            "name": "mix_it_electron"
          }
        },
        {
          "name": "@electron-forge/maker-zip",
          "platforms": [
            "darwin"
          ],
          "config": {
            "name": "MixIt"
          }
        },
        {
          "name": "@electron-forge/maker-deb",
          "config": {}
        },
        {
          "name": "@electron-forge/maker-rpm",
          "config": {}
        }
      ]
    }
  },
  "dependencies": {
    "@types/node": "^17.0.23",
    "electron-squirrel-startup": "^1.0.0",
    "fast-xml-parser": "^4.0.7",
    "plist": "^3.0.5",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@electron-forge/cli": "^6.0.0-beta.63",
    "@electron-forge/maker-deb": "^6.0.0-beta.63",
    "@electron-forge/maker-rpm": "^6.0.0-beta.63",
    "@electron-forge/maker-squirrel": "^6.0.0-beta.63",
    "@electron-forge/maker-zip": "^6.0.0-beta.63",
    "@trivago/prettier-plugin-sort-imports": "^3.2.0",
    "@types/plist": "^3.0.2",
    "@types/uuid": "^8.3.4",
    "@typescript-eslint/eslint-plugin": "^5.17.0",
    "@typescript-eslint/parser": "^5.17.0",
    "electron": "^18.0.1",
    "eslint": "^8.12.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-import-resolver-typescript": "^2.7.1",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-prettier": "^4.0.0",
    "shx": "^0.3.4",
    "ts-loader": "^9.2.8",
    "tsconfig-paths-webpack-plugin": "^3.5.2",
    "typescript": "~4.5.4",
    "webpack": "^5.71.0",
    "webpack-cli": "^4.9.2"
  }
}
