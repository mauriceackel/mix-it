{
  "compilerOptions": {
    "allowJs": true,
    "target": "ES5",
    "lib": ["esnext"],
    "module": "esnext",
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "build",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "paths": {
      "models/*": ["models/*", "../../frontend/src/models/*"],
      "utils/*": ["utils/*", "../../frontend/src/utils/*"]
    }
  },
  "include": ["src"]
}
